#:kivy 2.0.0

<MyButton@Button>:
    font_size: '30sp'
    background_color: [0, 0, 1, 0.7]


<Container>:
    rows: 3


    AnchorLayout:
        anchor_y: 'top'
        size_hint: 1, 0.20
        padding: [3, 3, 3, 0]

        TextInput:
            id: text_label
            text: '0'
            halign: 'left'
            font_size: '50sp'
            multiline: 'False'


    GridLayout:
        cols: 4
        spacing: 3
        padding: 3

        MyButton:
            text: '7'
            on_press:
                root.press_button(7)

        MyButton:
            text: '8'
            on_press:
                root.press_button(8)

        MyButton:
            text: '9'
            on_press:
                root.press_button(9)

        MyButton:
            text: '*'
            on_press:
                root.action('*')

        MyButton:
            text: '4'
            on_press:
                root.press_button(4)

        MyButton:
            text: '5'
            on_press:
                root.press_button(5)

        MyButton:
            text: '6'
            on_press:
                root.press_button(6)

        MyButton:
            text: '/'
            on_press:
                root.action('/')

        MyButton:
            text: '1'
            on_press:
                root.press_button(1)

        MyButton:
            text: '2'
            on_press:
                root.press_button(2)

        MyButton:
            text: '3'
            on_press:
                root.press_button(3)

        MyButton:
            text: '-'
            on_press:
                root.action('-')

        MyButton:
            text: '0'
            on_press:
                root.press_button(0)

        MyButton:
            text: '.'
            on_press:
                root.press_button('.')

        MyButton:
            text: 'AC'
            on_press:
                root.press_button('AC')

        MyButton:
            text: '+'
            on_press:
                root.action('+')
    

    BoxLayout:
        padding: [3, 0, 3, 3]
        orientation: 'vertical'
        size_hint: 1, 0.15
        MyButton:
            text:'='
            on_press:
                root.equal()
